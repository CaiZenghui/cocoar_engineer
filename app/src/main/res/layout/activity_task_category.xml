<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:background="#33007faf"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="任务分类"
                android:textColor="@color/cor_text_blue"
                android:textSize="22sp" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/vg_task_install"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="67dp"
            android:background="@drawable/btn_blue_transparent_bg_round_corner_selector" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="安装\n任务"
                    android:textColor="@color/cor_text_blue"
                    android:textSize="15sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:background="@color/cor_text_blue" />

                <TextView
                    android:id="@+id/tv_task_install_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15sp"
                    android:gravity="center"
                    android:text="@string/task_install_des"
                    android:textColor="@color/cor_text_blue"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_num_task_install"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/red_circle"
                android:gravity="center"
                android:text="20"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/vg_task_finish"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_blue_transparent_bg_round_corner_selector" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="已完成"
                    android:textColor="@color/cor_text_blue"
                    android:textSize="15sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:background="@color/cor_text_blue" />

                <TextView
                    android:id="@+id/tv_task_finish_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15sp"
                    android:gravity="center"
                    android:text="@string/task_install_des"
                    android:textColor="@color/cor_text_blue"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_num_task_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/red_circle"
                android:gravity="center"
                android:text="20"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/vg_task_unfinish"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_blue_transparent_bg_round_corner_selector" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="未完成"
                    android:textColor="@color/cor_text_blue"
                    android:textSize="15sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:background="@color/cor_text_blue" />

                <TextView
                    android:id="@+id/tv_task_unfinish_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15sp"
                    android:gravity="center"
                    android:text="@string/task_install_des"
                    android:textColor="@color/cor_text_blue"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_num_task_unfinish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/red_circle"
                android:gravity="center"
                android:text="20"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/vg_task_unsuccess"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_blue_transparent_bg_round_corner_selector" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="未成功"
                    android:textColor="@color/cor_text_blue"
                    android:textSize="15sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:background="@color/cor_text_blue" />

                <TextView
                    android:id="@+id/tv_task_unsuccess_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15sp"
                    android:gravity="center"
                    android:text="@string/task_install_des"
                    android:textColor="@color/cor_text_blue"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_num_task_unsuccess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/red_circle"
                android:gravity="center"
                android:text="20"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/vg_task_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/cor_light_gray"
            android:padding="10dp"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tv_tip_task_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="安装记录"
                android:textColor="@color/cor_text_blue"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_task_record_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_tip_task_record"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/task_success_des"
                android:textColor="@color/cor_text_blue"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>