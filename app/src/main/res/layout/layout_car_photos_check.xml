<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <ImageView
            android:id="@+id/iv_car_left_front"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/vg_bg_black_stroke"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_left_front" />

        <ImageView
            android:id="@+id/iv_car_right_front"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/vg_bg_black_stroke"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_right_front" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <ImageView
            android:id="@+id/iv_car_left_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/vg_bg_black_stroke"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_left_back" />

        <ImageView
            android:id="@+id/iv_car_right_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/vg_bg_black_stroke"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_right_back" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <ImageView
            android:id="@+id/iv_car_driver"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/vg_bg_black_stroke"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_driver_space" />

        <ImageView
            android:id="@+id/iv_car_control"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/vg_bg_black_stroke"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_controller" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <ImageView
            android:id="@+id/iv_car_front_row"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/vg_bg_black_stroke"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_front_row" />

        <ImageView
            android:id="@+id/iv_car_back_row"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/vg_bg_black_stroke"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_back_row" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_pass"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_blue_bg_round_corner_selector"
        android:gravity="center"
        android:text="通过"
        android:textColor="@color/white"
        android:textSize="19sp" />

</LinearLayout>