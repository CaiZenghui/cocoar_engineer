<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="#00b9ff" >

    <RelativeLayout
        android:id="@+id/vg_title1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <View
            android:id="@+id/indicator1"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_alignLeft="@+id/tv_shangjia"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/tv_shangjia"
            android:background="@color/yellow" />

        <TextView
            android:id="@+id/tv_shangjia"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@id/indicator1"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="证件审核"
            android:textColor="@color/white"
            android:textSize="19sp" />

        <View
            android:id="@+id/view_red_circle1"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/tv_shangjia"
            android:layout_marginTop="5dp"
            android:background="@drawable/red_circle" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vg_title2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <View
            android:id="@+id/indicator2"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_alignLeft="@+id/tv_id_check"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/tv_id_check"
            android:background="@color/yellow"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_id_check"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@id/indicator2"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="车辆信息"
            android:textColor="@color/white"
            android:textSize="19sp" />

        <View
            android:id="@+id/view_red_circle2"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/tv_id_check"
            android:layout_marginTop="5dp"
            android:background="@drawable/red_circle" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vg_title3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <View
            android:id="@+id/indicator3"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_alignLeft="@+id/tv_bind_box"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/tv_bind_box"
            android:background="@color/yellow"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_bind_box"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@id/indicator3"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="盒子绑定"
            android:textColor="@color/white"
            android:textSize="19sp" />

        <View
            android:id="@+id/view_red_circle3"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/tv_bind_box"
            android:layout_marginTop="5dp"
            android:background="@drawable/red_circle" />
    </RelativeLayout>

</LinearLayout>