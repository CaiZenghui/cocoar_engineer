<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login" >

    <include layout="@layout/layout_title" />

    <TextView
        android:id="@+id/tv_welcome_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:text="欢迎登陆cocar信息采集系统"
        android:textColor="#00b9ff"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/iv_task_install"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:src="@mipmap/icon_install_task" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_task_install"
        android:layout_alignTop="@+id/iv_task_install"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="安装\n工程师"
        android:textColor="#ffffff"
        android:textSize="28dp" />

    <ImageView
        android:id="@+id/iv_task_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_task_install"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@mipmap/icon_sale_task" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_task_sale"
        android:layout_alignTop="@+id/iv_task_sale"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="销售"
        android:textColor="#ffffff"
        android:textSize="23dp" />

</RelativeLayout>