<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/common_padding"
        android:layout_marginRight="@dimen/common_padding"
        android:layout_marginTop="8dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/item_fix_task_owner_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话：13795289631"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_fix_task_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:text="已派单"
                android:textColor="@color/cocar_blue"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_fix_task_plate_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车牌：沪A12345"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_fix_task_owner_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址：上海市徐汇区新华路160号"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_fix_task_fix_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安装时间：2014-11-25 12:00"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

</FrameLayout>