<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- photo界面动作 -->
    <style name="PopupChooseImage" parent="@android:style/Animation">
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:windowEnterAnimation">@anim/slide_in_popup_choose_image</item>
        <item name="android:windowExitAnimation">@anim/slide_out_popup_choose_image</item>
    </style>

    <!-- 选择拍照还是照片 -->
    <style name="ChooseImageButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>